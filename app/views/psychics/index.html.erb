<div id="half-fold-purple" class="d-flex flex-column justify-content-center align-items-center">
    <div><h1> Here are all our great psychics !</h1></div>
    <div><h2>Have a look to find the one who will bring you some magic...</h2></div>
</div>

<div class="container">

    <div style="margin-top: -100px">
      <div class="cards">
        <% @psychics.each do |psychic| %>
            <div class="card-index">
              <%= link_to psychic_path(psychic) do %>
                <% if psychic.photo.attached? %>
                  <%= cl_image_tag psychic.photo.key, width: 400, height: 300, crop: :pad %>
                <% else %>
                  <img src='https://vanbytheriver.files.wordpress.com/2015/06/psychic.jpg'/>
                <% end %>
                <div class="p-4">
                  <h3><%= psychic.user.name%><%= psychic.user.last_name%></h3>
                  <p><i class="fas fa-map-marker-alt"></i> <%= psychic.localisation %></p>
                  <div>
                    <p><strong>â‚¬<%= psychic.hour_rate %></strong>/hour</p>
                  </div>
                </div>
              <% end %>
            </div>
        <% end %>
      </div>
    </div>
</div>

